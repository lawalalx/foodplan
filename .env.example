# Environment Configuration Example
# Copy this to .env and fill in your actual values

# Neon PostgreSQL Database URL
# Get this from your Neon dashboard
# Format: postgresql://username:password@host/database
# Note: Use the pooler connection for better performance (ends with ?sslmode=require)
DATABASE_URL=postgresql://user:password@ep-xxx-pooler.us-east-1.neon.tech/dbname?sslmode=require

# Optional: Unpooled connection for migrations and setup
# DATABASE_URL_UNPOOLED=postgresql://user:password@ep-xxx.us-east-1.neon.tech/dbname?sslmode=require

# LLM Configuration (ChatGroq)
GROQ_API_KEY=your_groq_api_key_here

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Optional: External Backend Integration
BACKEND_API_URL=http://localhost:8001
BACKEND_API_KEY=your_backend_api_key
